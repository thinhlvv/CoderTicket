
<h1> NEW EVENT </h1>
<div id="main-form">
  <div id="form-div">
    <form action='<%=venues_path%>' method='post' id="form-one" class="form">
    <h2> Venues </h2>
      <p class="name">
        <input name="name" type="text" class="validate[required,custom[onlyLetter],length[0,100]] feedback-input" placeholder="Name" id="name" required />
      </p>
      <p class="name">
        <input name="full_address" type="text" class="validate[required,custom[onlyLetter],length[0,100]] feedback-input" placeholder="Address" id="name" required/>
      </p>
      <p class="name">
        <div class="form-group">
          <select name='region_id' class="form-control" id="exampleSelect1" required>
            <% @regions.each do |region| %>
            <option value='<%= region.id %>' ><%= region.name %></option>
            <% end %>
          </select>
        </div>
      </p>

      <div class="submit">
        <input type="submit" value="Go" id="button-bottom"/>
        <div class="ease"></div>
      </div>
    </form>
  </div>
